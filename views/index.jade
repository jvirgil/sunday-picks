div.container-fluid
	div.row-fluid
		div.span8
			h2 Week
			p
				table.table
					thead
						tr
							td
								a(href='#?1') 1
							td 2
							td 3
							td 4
							td 5
							td 6
							td 7
							td 8
							td 9
							td 10
							td 11
							td 12
							td 13
							td 14
							td 15
							td 16
							td 17
					tbody
			div
				table.table.table-striped
					thead
						tr
							th Away Team
							th
							th Home Team
							th Spread
					tbody
						-each game in games
							!=partial('game', { game: game });
		div.span4
			h2 Standings
			p
				table.table.table-striped.table-bordered
					thead
						tr
							th(rowspan="2") Name
							th(colspan="4") Season
							th(colspan="3") Week
						tr
							th W
							th L
							th T
							th GB
							th W
							th L
							th T
					tbody
						-each player in players
							!=partial('player', { player: player });
